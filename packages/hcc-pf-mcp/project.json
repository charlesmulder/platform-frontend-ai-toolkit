{
  "name": "@redhat-cloud-services/hcc-pf-mcp",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "packages/hcc-pf-mcp",
        "commands": [
          "rm -rf dist",
          "tsc --build tsconfig.lib.json",
          "mkdir -p dist/lib/examples",
          "cp -r src/lib/examples/*.md dist/lib/examples/"
        ],
        "parallel": false
      }
    }
  }
}